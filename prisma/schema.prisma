generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Company {
  id                 String               @id @default(cuid())
  name               String               @unique
  healthScore        Int                  @default(3)
  priority           Int                  @default(2)
  status             String
  contractEndDate    DateTime?
  primaryCSM         String
  implementationLead String
  secondLead         String?
  thirdLead          String?
  currentObjectives  String?              @db.Text
  externalBlockers   String?              @db.Text
  internalBlockers   String?              @db.Text
  futureWork         String?              @db.Text
  lastActivityAt     DateTime?
  conversationVolume Int?
  vault              TechnicalVault?
  tickets            Ticket[]
  activityLogs       ActivityLog[]
  deadlines          Deadline[]
  blockers           Blocker[]
  knowledgeBase      KnowledgeBaseEntry[]
  healthScoreLogs    HealthScoreLog[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
}

model TechnicalVault {
  id           String  @id @default(cuid())
  companyId    String  @unique
  company      Company @relation(fields: [companyId], references: [id])
  ftpInfo      String?
  apiKeys      String?
  sshConfig    String?
  otherSecrets String?
}

model ProductChangeRequest {
  id          String    @id @default(cuid())
  issue       String
  description String
  location    String
  priority    Int       @default(3)
  requestedBy String
  assignedTo  String?
  status      String
  deadline    DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
}

model ActivityLog {
  id        String   @id @default(cuid())
  content   String   @db.Text
  type      String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
}

model Ticket {
  id        String   @id @default(cuid())
  title     String
  status    String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
}

model Deadline {
  id          String   @id @default(cuid())
  description String
  dueDate     DateTime
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
}

model Blocker {
  id                 String    @id @default(cuid())
  title              String
  description        String?   @db.Text
  category           String
  status             String    @default("Open")
  owner              String
  resolutionDeadline DateTime?
  escalationLevel    Int       @default(0)
  companyId          String
  company            Company   @relation(fields: [companyId], references: [id])
  resolvedAt         DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model KnowledgeBaseEntry {
  id        String   @id @default(cuid())
  title     String
  content   String?  @db.Text
  url       String?
  type      String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  message   String
  priority  Int      @default(2)
  isRead    Boolean  @default(false)
  companyId String?
  createdAt DateTime @default(now())
}

model HealthScoreLog {
  id           String   @id @default(cuid())
  companyId    String
  company      Company  @relation(fields: [companyId], references: [id])
  score        Int
  breakdown    Json
  calculatedAt DateTime @default(now())
}
